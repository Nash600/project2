<center> <h1> Hello adds page </h1> <center>
<div class = "form-type">
<%= form_for @post, url: {action: "create"} do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, :required => true %>
    </p>

    <p>
      <%= f.label :category %><br><br>
      <%= f.select(:category, Add::Category)%>
    </p>
   
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :text, :required => true %>
    </p>

    <p>
    
      <%= f.label :browse %><br>
      <%= f.file_field :image , multiple: false %>
      
    </p>
   
    <p>
      <%= f.submit %>
    </p>
    </div>
  <% end %>